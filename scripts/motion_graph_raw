import pandas as pd
import matplotlib.pyplot as plt

file_path = r"C:\vibraguard\data\Motion and Pressure Dataset.csv"
df = pd.read_csv(file_path)
plt.figure(figsize=(8, 5))
plt.scatter(df['svm_mean'], df['step_count'], color='purple', alpha=0.6)
plt.title('Motion Intensity vs Step Count')
plt.xlabel('SVM Mean')
plt.ylabel('Step Count')
plt.grid(True)
plt.tight_layout()
plt.show()