  <script>
    // Theme toggle
    document.getElementById("toggle-theme").addEventListener("click", () => {
      document.body.classList.toggle("dark-mode");
    });

    // Reading toggle
    const readingToggle = document.getElementById("reading-toggle");
    const readingStatus = document.getElementById("reading-status");

    readingToggle.addEventListener("change", () => {
      if (readingToggle.checked) {
        readingStatus.textContent = "Reading is ON";
        console.log("Simulated: Reading started");
        // You can add a fetch() call here to trigger backend if needed
      } else {
        readingStatus.textContent = "Reading is OFF";
        console.log("Simulated: Reading stopped");
      }
    });
  </script>
